{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make -j8",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            }
        },
        {
            "label": "build and flash",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make -j8 flash",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            }
        },
        {
            "label": "build and flash then serial",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // "command": "screen /dev/cu.SLAB_USBtoUART 115200 -L",
            "command": "make monitor",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "dependsOn": "build and flash",
            "problemMatcher": []
        },
        {
            "label": "update-compile-database",
            "command": "compiledb --command-style --output build/compile_commands.json -n make",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "command": "make clean",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}